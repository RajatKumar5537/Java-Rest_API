{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "required": ["id", "name", "location", "mobile", "designation"],
        "properties": {
            "id": {
                "type": "string"
            },
            "name": {
                "type": "string"
            },
            "location": {
                "type": "string"
            },
            "mobile": {
                "type": "string"
            },
            "designation": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        }
    }
}